<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fanfan.hotel.activity.ConfirmActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar.MyStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@mipmap/ic_top_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@android:color/black">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/roll_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            app:rollviewpager_play_delay="3000" />


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/y14"
                    android:paddingRight="@dimen/y14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份认证"
                        android:textSize="@dimen/x10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_person"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/y6"
                            android:layout_weight="2" />

                        <LinearLayout
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/y7"
                            android:layout_marginTop="@dimen/y7"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:padding="@dimen/y3">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0px"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/confirm_tv_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="姓名： " />

                                <TextView
                                    android:id="@+id/tv_name"
                                    style="@style/confirm_tv_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="李白" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0px"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="0px"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <TextView
                                        style="@style/confirm_tv_style"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="性别： " />

                                    <TextView
                                        android:id="@+id/tv_gender"
                                        style="@style/confirm_tv_style"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="男" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0px"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <TextView
                                        style="@style/confirm_tv_style"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="名族： " />

                                    <TextView
                                        android:id="@+id/tv_family"
                                        style="@style/confirm_tv_style"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="李白" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0px"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/confirm_tv_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="出生： " />

                                <TextView
                                    android:id="@+id/tv_birth"
                                    style="@style/confirm_tv_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="1980年2月1日" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0px"
                                android:layout_weight="1.5">

                                <TextView
                                    style="@style/confirm_tv_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="住址： " />

                                <TextView
                                    android:id="@+id/tv_address"
                                    style="@style/confirm_tv_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="北京市海淀区八里庄30号1门102号" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/y15"
                    android:paddingRight="@dimen/y15"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房型确认"
                        android:textSize="@dimen/x10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_room"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/y6"
                            android:layout_weight="2" />

                        <LinearLayout
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/y6"
                            android:layout_marginTop="@dimen/y6"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:padding="@dimen/y3">

                            <TextView

                                android:id="@+id/tv_title"
                                android:layout_width="match_parent"
                                android:layout_height="0px"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="标准间双人床无烟"
                                android:textSize="@dimen/x9" />

                            <TextView
                                android:id="@+id/tv_details"
                                android:layout_width="wrap_content"
                                android:layout_height="0px"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:text="2张1.2米宽单人床    入住2人    24平方米左右 有窗"
                                android:textSize="@dimen/x9" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="房型设施"
                                android:textSize="@dimen/x9" />

                            <TextView
                                android:id="@+id/tv_many_details"
                                android:layout_width="wrap_content"
                                android:layout_height="0px"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:lines="3"
                                android:textSize="@dimen/x6" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/extra_consumption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/y14"
                    android:paddingRight="@dimen/y14"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="额外消费"
                        android:textSize="@dimen/x10" />


                    <TextView
                        android:id="@+id/tv_extra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y6"
                        android:text="请您稍等，我们已经联系工作人员为您查房，请您稍等1-3分钟..."
                        android:textColor="@color/crimson" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_confirm"
                    style="@style/redButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/y20"
                    android:paddingBottom="@dimen/y6"
                    android:paddingTop="@dimen/y6"
                    android:textSize="@dimen/x10" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


</LinearLayout>